<%- include('../../views/layout/header.ejs') %>

<!-- Bootstrap CSS -->
<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
  rel="stylesheet"
/>
<!-- Font Awesome -->
<link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
/>
<!-- Custom CSS -->
<link rel="stylesheet" href="/styles/user/orderDetails.css" />

<div class="container mt-5">
  <h2>Order Details</h2>
  <div class="row">
    <div class="col-md-6">
      <h3>Shipping Address</h3>
      <p><%= order.shippingAddress.name %></p>
      <p><%= order.shippingAddress.address %></p>
      <p><%= order.shippingAddress.city %>, <%= order.shippingAddress.state %> <%= order.shippingAddress.zip %></p>
      <p><%= order.shippingAddress.country %></p>
    </div>
    <div class="col-md-6">
      <h3>Product Details</h3>
      <% order.orderedItems.forEach(item => { %>
        <div class="product-item">
          <p><strong>Product Name:</strong> <%= item.product.productName %></p>
          <p><strong>Price:</strong> ₹<%= item.price %></p>
          <p><strong>Quantity:</strong> <%= item.quantity %></p>
          <p><strong>Total Price:</strong> ₹<%= item.totalPrice %></p>
        </div>
      <% }) %>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-12">
      <h3>Order Status</h3>
      <div class="progress">
        <div class="progress-bar" role="progressbar" style="width: <%= order.statusPercentage %>%;" aria-valuenow="<%= order.statusPercentage %>" aria-valuemin="0" aria-valuemax="100"><%= order.status %></div>
      </div>
    </div>
  </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<%- include('../../views/layout/footer.ejs') %>
