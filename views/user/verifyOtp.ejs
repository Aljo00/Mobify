<%- include('../../views/layout/header.ejs')%>

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
<!-- Custom CSS -->
<link rel="stylesheet" href="/styles/user/otp.css">

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm sticky-top">
    <div class="container">
        <a class="navbar-brand fw-bold text-primary" href="#">Mobify</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</nav>

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-lg">
                <div class="row g-0">
                    <!-- Welcome Image -->
                    <div class="col-md-6 d-none d-md-block welcome-side">
                        <div class="welcome-image h-100 d-flex flex-column justify-content-center align-items-center text-white p-4 text-center">
                            <img src="https://img.freepik.com/free-vector/forgot-password-concept-illustration_114360-1123.jpg" alt="OTP Verification" class="img-fluid mb-4">
                            <h3>Verify Your Account</h3>
                            <p>Please enter the OTP sent to your email/phone to complete verification.</p>
                        </div>
                    </div>
                    <!-- OTP Form -->
                    <div class="col-md-6">
                        <div class="card-body p-4">
                            <h2 class="text-center mb-3 text-primary fw-bold">Enter OTP</h2>
                            <p class="text-center text-muted mb-4">We've sent a verification code to your registered email/phone</p>
                            <form novalidate method="post" action="/verify-otp" id="otpForm" onsubmit="return validateOtp()">
                                <div class="mb-4">
                                    <div class="d-flex justify-content-center">
                                        <input type="text" id="otp" class="form-control form-control-lg text-center otp-input" maxlength="6" required pattern="[0-9]{6}" inputmode="numeric">
                                    </div>
                                </div>
                                <div class="d-grid mb-3">
                                    <button type="submit" class="btn btn-primary btn-lg">Verify OTP</button>
                                </div>
                                <div class="text-center">
                                    <p class="mb-0">Didn't receive the code? 
                                        <a href="#" class="text-primary resend-link" id="resendOTP" onclick="return resendOtp()">Resend OTP</a>
                                    </p>
                                    <p class="text-muted mt-2">
                                        <small>Time remaining: <span id="timer" class="timer">01:00</span></small>
                                    </p>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Footer -->
<footer class="bg-dark py-2 mt-4">
    <div class="container">
        <div class="row align-items-center g-3">
            <div class="col-md-4 text-center text-md-start">
                <a class="navbar-brand fw-bold text-primary mb-0" href="#">Mobify</a>
                <p class="text-muted small mb-0">Your trusted mobile store</p>
            </div>
            <div class="col-md-4 text-center">
                <div class="social-links">
                    <a href="#" class="text-muted mx-2"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" class="text-muted mx-2"><i class="fab fa-twitter"></i></a>
                    <a href="#" class="text-muted mx-2"><i class="fab fa-instagram"></i></a>
                </div>
            </div>
            <div class="col-md-4 text-center text-md-end">
                <p class="mb-0 text-muted small">&copy; 2023 Mobify. All rights reserved.</p>
            </div>
        </div>
    </div>
</footer>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<!-- Include jQuery before your script -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- Custom JS -->
<script src="/scripts/user/otp.js"> </script>

