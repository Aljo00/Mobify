<%- include('../../views/layout/admin/header.ejs')%>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
<link rel="stylesheet" href="/styles/admin/category.css">

<div class="wrapper">
    <div class="sidebar">
        <h2><i class="fas fa-mobile-alt me-2"></i>Mobify</h2>
        <a href="/admin/dashboard">
            <i class="fas fa-chart-line"></i>
            <span>Dashboard</span>
        </a>
        <a href="/admin/users">
            <i class="fas fa-users"></i>
            <span>Users</span>
        </a>
        <a href="/admin/category">
            <i class="fas fa-list"></i>
            <span>Categories</span>
        </a>
        <a href="#" class="active">
            <i class="fas fa-tags"></i>
            <span>Brands</span>
        </a>
        <a href="/admin/addProducts">
            <i class="fas fa-plus"></i>
            <span>Add Products</span>
        </a>
        <a href="/admin/products">
            <i class="fas fa-box"></i>
            <span>Products</span>
        </a>
        <a href="/admin/orders">
            <i class="fas fa-shopping-cart"></i>
            <span>Orders</span>
        </a>
        <a href="#">
            <i class="fas fa-cog"></i>
            <span>Settings</span>
        </a>
        <a href="/admin/logout">
            <i class="fas fa-sign-out-alt"></i>
            <span>Logout</span>
        </a>
    </div>

    <div class="main-content">
        <div class="container-fluid">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h4 class="mb-0">Brand Management</h4>
                <div class="date text-muted">
                    <%= new Date().toLocaleDateString('en-US', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %>
                </div>
            </div>

            <!-- Breadcrumb -->
            <div class="breadcrumb-container mb-4">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item">
                            <a href="/admin/dashboard">
                                <i class="fas fa-home me-1"></i>Dashboard
                            </a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">
                            <i class="fas fa-tags me-1"></i>Brands
                        </li>
                    </ol>
                </nav>
            </div>

            <!-- Brands Table Card -->
            <div class="card mb-4">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead class="table-light">
                                <tr>
                                    <th>Name</th>
                                    <th>Photo</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% brands.forEach(brand => { %>
                                    <tr>
                                        <td><%= brand.brandName %></td>
                                        <td><img src="/uploads/re-image/<%= brand.brandImage %>" alt="<%= brand.name %>" width="50" height="50"></td>
                                        <td>
                                            <button class='btn btn-warning' onclick='updateBrand("<%= brand.id %>")'>Update</button>
                                            <button class='btn btn-danger' onclick='deleteBrand("<%= brand.id %>")'>Delete</button>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                        <% if (totalPages > 0) { %>
                            <nav aria-label="Page navigation">
                                <ul class="pagination justify-content-center">
                                    
                                    <% if (currentPage > 1) { %>
                                        <li class="page-item">
                                            <a class="page-link" href="?page=<%= currentPage - 1 %>">Previous</a>
                                        </li>
                                    <% } %>
                                    <% for (let i = 1; i <= totalPages; i++) { %>
                                        <li class="page-item <%= (i === currentPage) ? 'active' : '' %>">
                                            <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                                        </li>
                                    <% } %>
                                    <% if (currentPage < totalPages) { %>
                                        <li class="page-item">
                                            <a class="page-link" href="?page=<%= currentPage + 1 %>">Next</a>
                                        </li>
                                    <% } %>
                                </ul>
                            </nav> 
                        <% } %>
                    </div>
                </div>
            </div>

            <!-- Add Brand Card -->
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title mb-4">Add New Brand</h5>
                    <div class="row justify-content-center">
                        <div class="col-md-8">
                            <form method="post" action="/admin/addBrands" enctype="multipart/form-data">
                                <div class="mb-3">
                                    <label for="categoryName" class="form-label">Brand Name</label>
                                    <input type="text" class="form-control" id="categoryName" name="brand" required>
                                </div>
                                <div class="mb-3">
                                    <label for="brandPhoto" class="form-label">Brand Logo</label>
                                    <input type="file" class="form-control" id="brandPhoto" name="image" accept=".jpg, .jpeg, .png" required>
                                </div>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-plus me-2"></i>Add Brand
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<!-- Include jQuery before your script -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script src="/scripts/admin/addCategory.js"></script>


<%- include('../../views/layout/admin/footer.ejs')%>