        <!-- Contact Main Section -->
        <div class="contact-main">
            <div class="row g-4">
                <!-- Contact Form -->
                <div class="col-lg-7" data-aos="fade-right">
                    <div class="contact-form">
                        <div class="form-header">
                            <div class="form-icon">
                                <i class="fas fa-paper-plane"></i>
                            </div>
                            <h2>Send us a Message</h2>
