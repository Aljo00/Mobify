<%- include('../../views/layout/header.ejs') %>

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
<!-- Custom CSS -->
<link rel="stylesheet" href="/styles/user/home.css">

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm sticky-top">
    <div class="container">
        <a class="navbar-brand fw-bold text-primary" href="#">Mobify</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item"><a class="nav-link active" href="/">Home</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Shop</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Categories</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Deals</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Contact</a></li>
            </ul>
            <form class="d-flex me-3">
                <div class="input-group">
                    <input class="form-control" type="search" placeholder="Search products...">
                    <span class="input-group-text search-icon">
                        <i class="fas fa-search"></i>
                    </span>
                </div>
            </form>
            <div class="icons-group me-2">
                <a href="#" class="text-dark me-3"><i class="far fa-heart fs-5"></i></a>
                <a href="#" class="text-dark"><i class="fas fa-shopping-cart fs-5"></i></a>
            </div>
            <% if (locals.user) {%>
                <div class="dropdown">
                    <a href="#" class="sign-in-link"><%=locals.user.name%></a>
                    <div class="dropdown-content">
                        <a href="#">Profile</a>
                        <a href="/logout">logout</a>
                    </div>
                </div>
            <%} else {%>
            <div class="d-flex align-items-center">
                <a href="/login" class="btn btn-outline-primary me-2">Login</a>
                <a href="/signup" class="btn btn-primary">Sign Up</a>
            </div>
            <%}%>
            
        </div>
    </div>
</nav>

<!-- Main Content -->
<main class="container py-5 text-center">
    <h1 class="display-4 fw-bold">Welcome to Mobify</h1>
    <p class="lead text-muted mb-4">Your trusted destination for the latest smartphones and unbeatable deals.</p>
    <a href="/shop" class="btn btn-primary btn-lg">Start Shopping</a>
</main>

<!-- Footer -->
<footer class="bg-dark py-2 mt-4">
    <div class="container">
        <div class="row align-items-center g-3">
            <div class="col-md-4 text-center text-md-start">
                <a class="navbar-brand fw-bold text-primary mb-0" href="#">Mobify</a>
                <p class="text-muted small mb-0">Your trusted mobile store</p>
            </div>
            <div class="col-md-4 text-center">
                <div class="social-links">
                    <a href="#" class="text-muted mx-2"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" class="text-muted mx-2"><i class="fab fa-twitter"></i></a>
                    <a href="#" class="text-muted mx-2"><i class="fab fa-instagram"></i></a>
                </div>
            </div>
            <div class="col-md-4 text-center text-md-end">
                <p class="mb-0 text-muted small">&copy; 2023 Mobify. All rights reserved.</p>
            </div>
        </div>
    </div>
</footer>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<%- include('../../views/layout/footer.ejs') %>
